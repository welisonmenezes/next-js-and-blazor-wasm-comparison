@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Globalization

@{
    CultureDefiner.DefineCulture(Context);
}

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.ToString()">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    @RenderSection("SEO", required: false)
    <base href="/" />
    <link href="css/app.css" rel="stylesheet" />
    <link href="Crypto.Blazor.Client.styles.css" rel="stylesheet" />
    <link href="manifest.json" rel="manifest" />
    <link rel="apple-touch-icon" sizes="512x512" href="icon-512.png" />
    <link rel="apple-touch-icon" sizes="192x192" href="icon-192.png" />
</head>

<body>
    <div id="app">
        <component type="typeof(Crypto.Blazor.Client.App)" render-mode="WebAssemblyPrerendered" />
    </div>

    <script src="_framework/blazor.webassembly.js"></script>
    <script src="js/app.js"></script>
    <script>navigator.serviceWorker.register("service-worker.js");</script>
    <persist-component-state />
</body>

</html>