@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Globalization

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.ToString()">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    @RenderSection("SEO", required: false)
    <title>Crypto.Blazor</title>
    <base href="/" />
    <link href="css/app.css" rel="stylesheet" />
    <link href="Crypto.Blazor.Client.styles.css" rel="stylesheet" />
    <link href="manifest.json" rel="manifest" />
    <link rel="apple-touch-icon" sizes="512x512" href="icon-512.png" />
    <link rel="apple-touch-icon" sizes="192x192" href="icon-192.png" />
</head>

<body>
    <div id="app">
        <component type="typeof(Crypto.Blazor.Client.App)" render-mode="Static" />
    </div>

    <script src="_framework/blazor.webassembly.js" autostart="false"></script>
    <script src="js/app.js"></script>
    <script>
        Blazor.start({ applicationCulture: "pt" });
    </script>
    <script>navigator.serviceWorker.register("service-worker.js");</script>
    <persist-component-state />
</body>

</html>