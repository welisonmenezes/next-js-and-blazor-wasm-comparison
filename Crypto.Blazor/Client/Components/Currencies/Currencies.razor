@using System.Globalization
<ul class="Currencies">
    @if (Markets != null)
    {
        foreach (Market market in Markets)
        {
            <Currency 
                IconUrl="@($"/img/icons/{market.BaseCurrency.ToLower()}.svg")" 
                Label="@market.BaseCurrency" 
                Price="@($"R$ {market.Price.ToString("N2")}")" />
        }
    }
    else 
    {
        <Error Message="No data found." />
    }
</ul>

@code {
    [Parameter] public IEnumerable<Market>? Markets { get; set; } = null;
}